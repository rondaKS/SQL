--Add new person into the persons table and add their hobby into the hobbies table.
INSERT INTO persons (name, age) VALUES ("Mia Olive", 5);
INSERT INTO hobbies (person_id, name) VALUES (6, "jumping");

--Display each persons name along with their hobby.
SELECT p.name, h.name
  FROM persons p
 INNER JOIN hobbies h    
    ON p.id = h.person_id;

--Display only Bobby McBobbyFace's hobbies.
SELECT p.name, h.name
  FROM persons p
 INNER JOIN hobbies h    
    ON p.id = h.person_id
 WHERE p.name LIKE "Bobby%";
